 	spin_unlock(&inode->i_lock);
@@ -1092,7 +1094,7 @@ void nfs_inode_attach_open_context(struc
 
 	spin_lock(&inode->i_lock);
 	if (list_empty(&nfsi->open_files) &&
-	    (nfsi->cache_validity & NFS_INO_DATA_INVAL_DEFER))
