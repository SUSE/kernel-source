+++ b/kernel/bpf/verifier.c
@@ -6086,6 +6086,11 @@ static int check_ptr_to_btf_access(struc
 				   type_is_rcu_or_null(env, reg, field_name, btf_id)) {
 				/* __rcu tagged pointers can be NULL */
 				flag |= MEM_RCU | PTR_MAYBE_NULL;
+
