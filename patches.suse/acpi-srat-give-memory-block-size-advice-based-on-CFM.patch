@@ -334,13 +335,23 @@ static int __init acpi_parse_cfmws(union
 {
 	struct acpi_cedt_cfmws *cfmws;
 	int *fake_pxm = arg;
-	u64 start, end;
+	u64 start, end, align;
 	int node;
