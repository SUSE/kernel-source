+++ b/drivers/net/ethernet/intel/ice/ice.h
@@ -959,9 +959,6 @@ u16 ice_get_avail_rxq_count(struct ice_p
 int ice_vsi_recfg_qs(struct ice_vsi *vsi, int new_rx, int new_tx, bool locked);
