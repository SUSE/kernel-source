+++ b/drivers/net/wireless/ath/ath11k/core.c
@@ -1028,7 +1028,7 @@ int ath11k_core_suspend(struct ath11k_ba
 	if (ret <= 0)
 		return ret;
 
-	if (ab->pm_policy == ATH11K_PM_WOW)
+	if (ab->actual_pm_policy == ATH11K_PM_WOW)
 		return ath11k_core_suspend_wow(ab);
 
