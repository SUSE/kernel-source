--- a/kernel/bpf/verifier.c
+++ b/kernel/bpf/verifier.c
@@ -463,7 +463,8 @@ static bool reg_not_null(const struct bp
 		type == PTR_TO_MAP_KEY ||
 		type == PTR_TO_SOCK_COMMON ||
 		(type == PTR_TO_BTF_ID && is_trusted_reg(reg)) ||
-		type == PTR_TO_MEM;
+		type == PTR_TO_MEM ||
+		type == CONST_PTR_TO_MAP;
 }
 
