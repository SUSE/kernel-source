-struct hid_ops *hid_ops;
+const struct hid_ops *hid_ops;
 EXPORT_SYMBOL(hid_ops);
 
 u8 *
--- a/drivers/hid/hid-core.c
+++ b/drivers/hid/hid-core.c
@@ -3075,7 +3075,7 @@ int hid_check_keys_pressed(struct hid_de
