-	frame_push	3
+ 	/* load state */
+	ld1		{v8.2d-v11.2d}, [x0]
 
-	mov		x19, x0
-	mov		x20, x1
-	mov		x21, x2
-
-	/* load state */
-0:	ld1		{v8.2d-v11.2d}, [x19]
-
-	/* load first 4 round constants */
-	adr_l		x3, .Lsha512_rcon
-	ld1		{v20.2d-v23.2d}, [x3], #64
