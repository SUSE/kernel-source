 #define __BLIST_UNUSED_16	((__force blist_flags_t)(1ULL << 16))
@@ -74,7 +75,6 @@
 			       (__force blist_flags_t) \
 			       ((__force __u64)__BLIST_LAST_USED - 1ULL)))
-#define __BLIST_UNUSED_MASK (__BLIST_UNUSED_13 | \
