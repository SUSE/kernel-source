--- a/tools/testing/selftests/hid/Makefile
+++ b/tools/testing/selftests/hid/Makefile
@@ -232,7 +232,7 @@ $(BPF_SKELS): %.skel.h: %.bpf.o $(BPFTOO
 	$(Q)$(BPFTOOL) gen object $(<:.o=.linked1.o) $<
