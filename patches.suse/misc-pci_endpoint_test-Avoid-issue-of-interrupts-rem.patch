+++ b/drivers/misc/pci_endpoint_test.c
@@ -263,6 +263,9 @@ fail:
 		break;
 	}
 
+	test->num_irqs = i;
+	pci_endpoint_test_release_irq(test);
+
 	return false;
 }
 
